<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Registry">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUserNameR"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/editTextPasswordR"
        android:layout_alignParentStart="true"
        android:hint="UserName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPasswordR"
        android:layout_below="@+id/editTextUserNameR"
        android:layout_alignParentStart="true"
        android:hint="Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="First Name"
        android:ems="10"
        android:id="@+id/editTextFirstNameR"
        android:layout_below="@+id/editTextPasswordR"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editTextStreetR"
        android:layout_below="@+id/editTextFirstNameR"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:hint="Street" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editTextCityR"
        android:layout_below="@+id/editTextStreetR"
        android:layout_alignParentStart="true"
        android:hint="City" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Last Name"
        android:ems="10"
        android:id="@+id/editTextLastNameR"
        android:layout_below="@+id/editTextFirstNameR"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextEmailR"
        android:layout_below="@+id/editTextCityR"
        android:layout_alignParentStart="true"
        android:hint="email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPassword2R"
        android:layout_below="@+id/editTextPasswordR"
        android:layout_alignParentStart="true"
        android:hint="Password" />

<!--    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Password"
        android:id="@+id/textView4"
        android:layout_below="@+id/editTextUserNameR"
        android:layout_toEndOf="@+id/editTextPasswordR" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Password Again"
        android:id="@+id/textView5"
        android:layout_below="@+id/editTextPasswordR"
        android:layout_alignStart="@+id/textView4" />-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/buttonEnterRegistration"
        android:layout_below="@+id/editTextEmailR"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
